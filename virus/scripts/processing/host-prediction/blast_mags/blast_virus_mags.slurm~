#!/bin/bash -l                                                                                                                                                               
#SBATCH --job-name=blast-virus                                                                                                                                           
#SBATCH --account=gornish
#SBATCH --output=output_blast_virusmags.txt                                                                                                                                               
#SBATCH --error=errors_blast_virusmags.txt                                                                                                                                                
#SBATCH --mail-user=mtoucedasuarez@hpc.arizona.edu                                        
#SBATCH --partition=standard                                                                                                                                                 
#SBATCH --time=24:00:00                                                                                                                                                      
#SBATCH --ntasks=94                                                                                                                                                           
#SBATCH --nodes=1                                                                                                                                                            
#SBATCH --mem=470gb


# load modules
module load blast
# execute commands

MAGS_DB="/xdisk/barberan/mtoucedasuarez/landuse/mags/bin_refinement/all_bins_renamed.fa"
VIRAL_SPECIES_FASTA="/xdisk/barberan/mtoucedasuarez/landuse/virus/cluster/viral_contigs_rep_seq.fasta"
OUTPUT_FILE="/xdisk/barberan/mtoucedasuarez/landuse/virus/host-prediction/blast_mags_virus/blast_virus_mags.out"

blastn -db $MAGS_DB -query $VIRAL_SPECIES_FASTA -out $OUTPUT_FILE -outfmt 6 -evalue 0.0000000001
